#!/usr/bin/env bash
# This script displays "Best School" 10 times, with special messages at positions 4 and 8.

i=1
j=10

while ((i <= j)); do
    if ((i == 4)); then
        echo "bad luck"
    elif ((i == 8)); then
        echo "good luck"
    else
        echo "Best School"
    fi

    ((i++))
done
